def atividade2():
    #declarando as variaveis 
    n = int(input("Write the number: "))
    total_sum = 0
    even_sum = 0
    odd_sum = 0
    #mostrando os numeros entre 0 e n, e somando os pares e os impares
    for i in range(n+1):
        print(i)
        total_sum += i
        if i % 2 == 0:
            even_sum += i
        else: 
            odd_sum += i
    #mostrando a conta de cada soma    
    print("total sum: ",total_sum)
    print("even sum: ", even_sum)
    print("odd sum: ",odd_sum)
