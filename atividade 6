def atividade6():
    vowels = "AEIOUaeiou" #definindo as vogais
    #loop para digitar a palavra ou letra
    while True: 
        text = input("write a letter or word(type 0 to end): ")
        if text == "0":
            break
        for letter in text: 
            if letter in vowels: #puxa as letras do texto e ve se tem vogal
                print(f"{letter} is a vowel") #resultado
